    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100;0,9..40,200;0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;0,9..40,800;1,9..40,200&family=Montserrat:wght@400;500;600;700&display=swap"
        rel="stylesheet">

    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100;0,9..40,200;0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;0,9..40,800;1,9..40,200&family=Montserrat:wght@400;500;600;700&family=Poppins:wght@200;300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100;0,9..40,200;0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;0,9..40,800;1,9..40,200&family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@300;400;500;600;700&family=Poppins:wght@200;300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/signup.css">
    <title>Signup</title>
</head>

<body>
    <div class="container-fluid">
        <div class="container signupbg">
            <div class="logindesign">
                <div class="backgroundImg signupImg">
                    <img src="img/signupbackground.jpeg" alt="loginpage">
                </div>
                <div class="loginBox signupform " id="loginBox">
                    <div>
                        <h2 class="signuptext fw-bold">Signup</h2>
                    </div>
                    <form class="loginInputFields">
                        <div class="inputBox">
                            <label for="userName" class="signuptext">User name</label>
                            <input type="text" name="username" class="removeborder" id="userName" placeholder="Username" onkeyup="removeborders()">
                            <i class="material-symbols-outlined pswdIcon">
                                person
                            </i>    
                        </div>
                        <div class="inputBox">
                            <label for="loginPassword" class="signuptext">Password</label>
                            <input type="password" name="password" class="removeborder" id="loginPassword" placeholder="Password" onkeyup="removeborders()">
                            <i class="material-symbols-outlined" id="lock" onclick="passwordVisibility()">
                                lock
                            </i>
                            <i class="material-symbols-outlined" id="lockOpen" onclick="passwordVisibility()">
                                lock_open
                            </i>
                        </div>
                        <div class="buttonArea signupbg">
                            <button type="button" class="btn" id="regmdl">Sign up</button>
                        </div>
                        <div class="signupSection">
                            <p class="signuptext">Already have an account? <span><a href="/login"
                                        class="text-primary">Login</a></span></p>
                        </div>
                        <div class="hide" id="alertbox"></div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <script src="/js/login.js"></script>
    <script src="/js/signup.js"></script>
</body>

</html>