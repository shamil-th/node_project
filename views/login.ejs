        rel="stylesheet">

    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100;0,9..40,200;0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;0,9..40,800;1,9..40,200&family=Montserrat:wght@400;500;600;700&family=Poppins:wght@200;300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100;0,9..40,200;0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;0,9..40,800;1,9..40,200&family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@300;400;500;600;700&family=Poppins:wght@200;300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">
    <title>Login</title>
</head>

<body>
    <div class="container">
        <div class="logindesign">
            <div class="backgroundImg">
                <img src="/img/5500661.jpg" alt="loginpage">
            </div>
            <div class="loginBox p-5">
                <div>
                    <h2>Member Login</h2>
                </div>
                <form class="loginInputFields" action="/login" method="post">
                    <div>
                        <label for="userName">User Name</label>
                        <input type="text" name="username" id="userName" placeholder="Username" required>
                    </div>
                    <div>
                        <label for="loginPassword">Password</label>
                        <input type="password" name="password" id="loginPassword" placeholder="Password" required>
                        <label for="loginPassword" id="incorrectPassword">Incorrect password</label>
                    </div>
                    <div class="buttonArea">
                        <button type="submit" class="btn">Log in</button>
                    </div>
                    <div class="signupSection">
                        <p>Don't have an account? <span><a href="/signup" class="text-primary">Sign up</a></span></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>